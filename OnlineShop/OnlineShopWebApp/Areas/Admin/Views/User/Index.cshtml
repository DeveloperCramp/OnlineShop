@model List<UserAccount>

<div class="text-center">
    <h3>Список пользователей</h3>
</div>
<div class="row">
    <div class="col-md-2">
        @await Html.PartialAsync("AdminLeftMenu")
    </div>
    <div class="col-md">
        <table class="table">
            <thread>
                <tr>
                    <th>№</th>
                    <th>Пользователь</th>
                    <th>Фамилия</th>
                    <th>Имя</th>
                    <th>Телефон</th>
                </tr>
            </thread>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].Login</td>
                        <td>@Model[i].LastName</td>
                        <td>@Model[i].FirstName</td>
                        <td>@Model[i].Phone</td>
                        <td><a class="btn btn-outline-dark" asp-area="Admin" asp-controller="User" asp-action="Detail" asp-route-userId="@Model[i].Id">Подробнее</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="col-md text-right">
            <a class="btn btn-outline-dark" asp-area="Admin" asp-controller="User" asp-action="Add">Добавить нового пользователя</a>
        </div>
    </div>
</div>