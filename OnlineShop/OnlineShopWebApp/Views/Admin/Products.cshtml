@model List<Product>

<div class="text-center">
    <h3>Продукты</h3>
</div>
<div class="row">
    <div class="col-2">
        <div class="btn-group-vertical">
            <a class="btn btn-dark" style="margin-bottom:10px" asp-controller="Admin" asp-action="Orders">Заказы</a>
            <a class="btn btn-dark" style="margin-bottom:10px" asp-controller="Admin" asp-action="Users">Пользователи</a>
            <a class="btn btn-dark" style="margin-bottom:10px" asp-controller="Admin" asp-action="Roles">Роли</a>
            <a class="btn btn-dark" style="margin-bottom:10px" asp-controller="Admin" asp-action="Products">Продукты</a>
        </div>
    </div>
    <div class="col">
        <table class="table">
            <thread>
                <tr>
                    <th>Id</th>
                    <th>Наименование</th>
                </tr>
            </thread>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.Name</td>
                        <td><a class="btn btn-outline-secondary" asp-controller="Product" asp-action="Index" asp-route-id="@product.Id" role="button">Подробно</a></td>
                        <td><a class="btn btn-outline-secondary" asp-controller="Admin" asp-action="EditProduct" asp-route-id="@product.Id" role="button">Редактировать</a></td>
                        <td><a class="btn btn-outline-danger" asp-controller="Admin" asp-action="RemoveProduct" asp-route-id="@product.Id" role="button">Удалить</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="col">
            <div class="text-right">
                <a class="btn btn-outline-dark" asp-controller="Admin" asp-action="AddProduct" role="button">Добавить новый продукт</a>
            </div>
        </div>
    </div>
</div>