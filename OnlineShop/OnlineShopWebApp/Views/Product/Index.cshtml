@model Product

<div class="row">
    <div class="card shadow">
        <div class="card-body">
            <img class="float-right" src="/img/notebook.jpg" style="max-width: 50%" alt="Notebook" />
            <h2>@Model.Name</h2>
            <h5>ID: @Model.Id</h5>
            <h6>Описание: @Model.Description</h6>
            <h5>Цена: @Model.Cost руб.</h5>
            <a class="btn btn-dark" href="#" role="button">Добавить в корзину</a>
            <a class="btn btn-dark" href="/" role="button">Продолжить покупки</a>
        </div>
    </div>
</div>