@model List<ProductViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md mx-1 card shadow text-center">
                <div class="card-body ">
                    <a style="color:black"
                       asp-area=""
                       asp-controller="Product"
                       asp-action="Index"
                       asp-route-productId="@product.Id">
                        <img class="card-img-top" src="@product.ImagePath" alt="Notebook" />
                        <h5>@product.Name</h5>
                    </a>
                    <h6>Цена: @product.Cost руб.</h6>
                </div>
                <div class="card-footer">
                    <div class="btn-group">
                        <a class="btn add-cart-btn-outline-success"
                           asp-controller="Cart"
                           asp-action="Add"
                           asp-route-productId="@product.Id"
                           role="button"><i class="fas fa-cart-plus"></i> Добавить в корзину</a>
                        <a class="btn add-favorite-btn-outline-dark"
                           asp-area=""
                           asp-controller="Favorite"
                           asp-action="Add"
                           asp-route-productId="@product.Id"
                           role="button"><i class="fas fa-star"></i></a>
                        <a class="btn add-compare-btn-outline-dark"
                           asp-area=""
                           asp-controller="Compare"
                           asp-action="Add"
                           asp-route-productId="@product.Id"
                           role="button"><i class="fas fa-balance-scale"></i></a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>